<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowSharedElementExitTransition">
            @transition/shared_element_transition
        </item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/shared_element_transition
        </item>


        <item name="android:windowContentTransitions">true</item>

    </style>


    <style name="Theme.Bacon.Detail" parent="android:Theme.Material.DialogWhenLarge.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowEnterTransition">
            @transition/enter_transition_for_article_detail_activity
        </item>
        <item name="android:windowReturnTransition">
            @transition/return_transition_for_article_list_activity
        </item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/shared_element_transition
        </item>

        <item name="android:windowSharedElementExitTransition">
            @transition/shared_element_transition
        </item>


    </style>

</resources>