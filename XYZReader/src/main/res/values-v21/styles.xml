<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowExitTransition">
            @transition/exit_transition_for_article_list_activity
        </item>

        <item name="android:windowReenterTransition">
            @transition/reenter_transition_to_article_list_activity
        </item>

        <item name="android:windowContentTransitions">true</item>

    </style>


    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowEnterTransition">
            @transition/enter_transition_to_article_detail_activity
        </item>

        <item name="android:windowReturnTransition">
            @transition/return_transition_to_list_activity
        </item>

        <item name="android:windowContentTransitions">true</item>

    </style>

</resources>